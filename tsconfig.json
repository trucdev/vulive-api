{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@lib/auth": [
        "libs/auth/src"
      ],
      "@lib/auth/*": [
        "libs/auth/src/*"
      ],
      "@config/config": [
        "libs/config/src"
      ],
      "@config/config/*": [
        "libs/config/src/*"
      ]
    }
  }
}